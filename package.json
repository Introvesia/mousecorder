{
  "name": "mousecorder",
  "version": "1.0.0",
  "description": "Screen recorder that records mouse movements",
  "author": "Introvesia",
  "main": "dist/main/main.js",
  "scripts": {
    "clean": "./clean.sh",
    "dev": "npm run clean && vite",
    "build": "npm run clean && tsc && vite build && electron-builder",
    "preview": "npm run clean && vite preview",
    "postinstall": "electron-builder install-app-deps"
  },
  "engines": {
    "node": ">=16.0.0"
  },
  "dependencies": {
    "electron-is-dev": "^2.0.0",
    "ffmpeg-static": "^5.2.0",
    "ffprobe-static": "^3.1.0",
    "fluent-ffmpeg": "^2.1.3",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "tailwindcss": "^3.3.0"
  },
  "devDependencies": {
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "@vitejs/plugin-react": "^4.0.4",
    "electron": "^25.8.0",
    "electron-builder": "^24.6.4",
    "typescript": "^5.0.0",
    "vite": "^4.4.9",
    "vite-plugin-electron": "^0.14.0",
    "vite-plugin-electron-renderer": "^0.14.5",
    "autoprefixer": "^10.4.14",
    "postcss": "^8.4.27",
    "tailwindcss": "^3.3.3"
  },
  "build": {
    "appId": "com.introvesia.mousecorder",
    "productName": "MouseCorder",
    "files": [
      "dist/**/*"
    ],
    "directories": {
      "output": "release"
    },
    "mac": {
      "target": ["dmg", "zip"],
      "category": "public.app-category.utilities"
    },
    "win": {
      "target": ["nsis", "portable"]
    },
    "linux": {
      "target": ["AppImage", "deb"],
      "category": "Utility"
    },
    "extraResources": [
      {
        "from": "node_modules/ffmpeg-static/",
        "to": "ffmpeg-static"
      }
    ]
  }
}
